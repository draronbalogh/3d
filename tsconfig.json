{
  "compilerOptions": {
    "target": "ES2021" /*es5*/ /*changed later*/,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "checkJs": true /*added later*/,
    "jsx": "react-jsx",
    "baseUrl": "./" /*added later*/,
    "paths": {
      "@/*": ["./*"] /*added later*/
    }
  },
  "exclude": ["../node_modules"],
  "include": [".eslintrc.js", "src", "./babel.config.js", "./jest.config.js"] /*added later*/
